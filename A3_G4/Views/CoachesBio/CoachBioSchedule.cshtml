@model IEnumerable<A3_G4.Models.Schedule>


@{
    ViewData["Title"] = "Coach Schedules";
}

<h1>@ViewData["Title"]</h1>

<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                Members
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @if ((ViewBag.membersFK.ContainsKey(item.ScheduleId)))
                {
                    @foreach (var member in ViewBag.membersFK[item.ScheduleId])
                    {
                        <a asp-area="" asp-controller="Members" asp-action="Details" asp-route-id="@member.Id">
                            @member.Name
                        </a>
                        <!--Adds space without extending the link-->
                        <span>&shy;</span>
                    }
                }
            </td>
        </tr>
        }
        
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>



